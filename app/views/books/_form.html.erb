<div class="row">
	<div class="col-md-12">
	    <div class="panel panel-default">
	        <div class="panel-heading">
	            <p>Please enter all mandatory (<span class="asterisk">*</span>) fields.</p>
	        </div>
	        <div class="panel-body">
				<%= form_for @book, :html=>{:class=>"form_validation"}, :html => { :multipart => true } do |f| %>
				    <% if @book.errors.any? %>
				    <div id="error_explanation">
				        <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
				        <ul>
				            <% @book.errors.full_messages.each do |msg| %>
				                <li><%= msg %></li>
				            <% end %>
				        </ul>
				    </div>
				  	<% end %>
	            <div class="row">
	                <div class="col-sm-3">
	                    <div class="form-group">
	                    	<%= f.label :title, "Book Title", :class=>"control-label" %><span class="asterisk">*</span> </br>
	                    	<%= f.text_field :title,  :required=>true, :class=>"form-control" %>
	                    </div>
	                </div>
	                <div class="col-sm-9">
	                    <div class="form-group">
			     		   <%= f.label :description, "Book Description", :class=>"control-label" %>
			     		   <%= f.text_area :description, :class=>"form-control" %>
	                    </div>
	                </div>
	            </div>
	            <div class="row">
	                <div class="col-sm-3">
	                    <div class="form-group">
				    		<%= f.label :author, "Book Author", :class=>"control-label"%>
				    		<%= f.text_field :author, :class=>"form-control" %>
	                    </div>
	                </div>
	            </div>
	            <div class="form-row form-group">
					<div class="row">
				    	<div class="col-md-6">
							<label class="form-label">Small Book Cover</label>	
							<%#=render 'books/image'%>
						    	<%=f.fields_for :images,@images do |fb|%>
						        	<%=render 'book_cover_fields', f: fb%>
						    	<%end%>
							<%#= link_to_add_fields "Add File", f, :images, options: 'epub_book' %>
				    	</div> 
					
	            
				    	<div class="col-md-6">
							<label class="form-label">EPub Book</label>	
							<%#=render 'books/image'%>
						    	<%=f.fields_for :images,@images do |fb|%>
						        	<%=render 'epub_book_fields', f: fb%>
						    	<%end%>
							<%#= link_to_add_fields "Add File", f, :images, options: 'epub_book' %>
				    	</div>  
					</div>
				</div>
				<div class="form-row form-group">
					<div class="row">
				    	<div class="col-md-6">
							<label class="form-label">Large Book Cover</label>	
							<%#=render 'books/image'%>
						    	<%=f.fields_for :images,@images do |fb|%>
						        	<%=render 'book_cover_large_fields', f: fb%>
						    	<%end%>
							<%= link_to_add_fields "Add File", f, :images, options: 'book_cover_large' %>
				    	</div>  
					</div>
				</div>
	            <div class="form-row form-group">
					<div class="row">
				    	<div class="col-md-6">
							<label class="form-label">Preview Book Image</label>	
							<%#=render 'books/image'%>
						    	<%=f.fields_for :images,@images do |fb|%>
						        	<%=render 'preview_book_image_fields', f: fb%>
						    	<%end%>
							<%= link_to_add_fields "Add File", f, :images, options: 'preview_book_image' %>
				    	</div>  
					</div>
				</div>

	        </div><!-- panel-body -->
	        <div class="panel-footer" data-no-turbolink>
	            <%= f.submit "Submit", class: "btn btn-primary btn-sm", data: { disable_with: 'Saving...' }, :onclick => "return validateForm();"  %>
	        </div>
			<% end %>
	    </div>
    </div>       
</div>

<script type="text/javascript">
	showHideMenu('li_book');
	
	function validateForm()
	{
		var flag = true;
		var book_title = $("#book_title").val();
		var book_cover = $("#book_images_attributes_0_book_cover").val();
		var epub_book = $("#book_images_attributes_1_epub_book").val();
		var book_cover_large = $("#book_images_attributes_2_book_cover_large").val();
		var preview_book_image = $("#book_images_attributes_3_preview_book_image").val();
		var epub_book_ext = $('#book_images_attributes_1_epub_book').val().split('.').pop().toLowerCase();
		  
		if ($.inArray(epub_book_ext,['epub']) == -1)
		{
			alert("Please upload epub extension book");
			flag = false;
		}  
		if(book_title.length == 0)  
		{
			alert('Please Enter Book Title');
			flag = false;
		}
		if(book_cover.length == 0)  
		{
			alert('Please upload image for Book Cover');
			flag = false;
		}
		if(epub_book.length == 0)  
		{
			alert('Please upload .epub extension book for Epub Book');
			flag = false;
		}
		if(book_cover_large.length == 0)  
		{
			alert('Please upload image for Book Cover Large');
			flag = false;
		}
		if(preview_book_image.length == 0)  
		{
			alert('Please upload image for Preview Book Image');
			flag = false;
		}
		return flag;
	}
</script>


