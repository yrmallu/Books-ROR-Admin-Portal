				    	</div> 
				    	<div class="col-md-4" >
							<label class="form-label">EPub Book</label><span class="asterisk">*</span> 	<br />
							<%if f.object.epub_file_name && !f.object.epub_file_name.blank? %>
								<%= f.object.epub_file_name %>
							<% end %>
							<%= f.file_field :epub, :class=>"image-file-name" %>
				    	</div>  
					</div>
				</div>
