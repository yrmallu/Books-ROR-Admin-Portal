<div class="row">
	<div class="col-md-12">
    	<div class="panel panel-default">
        	<div class="panel-heading">
            	<h4 class="panel-title">User Information</h4>
        	</div>
        	<div class="panel-body">
            	<address>
                	<strong>First Name:</strong>
                	<%= @user.first_name %>
            	</address>
            	<address>
			    	<strong>Last Name:</strong>
			    	<%= @user.last_name %>
            	</address>
            	<address>
			    	<strong>Phone Number:</strong>
			    	<%= @user.phone_number %>
            	</address>
				<% unless @role_id.eql?('1')%>
				<address>
			    	<strong>License Expiration Date:</strong>
			    	<%= @user.license_expiry_date %>
            	</address>
				<%end%>
            	<address>
			    	<strong>Email:</strong>
			    	<%= @user.email %>
            	</address>
			    <div data-no-turbolink>
					<% unless @role_id.eql?('1')%>
			            <%= link_to 'Edit', edit_user_path(@user, :role_id => @user.role_id, :school_id=>@school.id), :class=>"btn btn-success btn-xs" %>
					<%else%>
					    <%= link_to 'Edit', edit_user_path(@user, :role_id => @user.role_id), :class=>"btn btn-success btn-xs" %>
					<%end%>
					<% if @role_id.eql?('1')%>
						<%= link_to 'Cancel', users_path(:role_id => 1), class: "btn btn-white btn-xs"%>
					<% elsif @role_id.eql?('2')%>
					    <%= link_to 'Cancel', users_path(:role_id => 2, :school_id=>@school.id), class: "btn btn-white btn-xs"%>
					<% elsif @role_id.eql?('3')%>
					    <%= link_to 'Cancel', users_path(:role_id => 3, :school_id=>@school.id), class: "btn btn-white btn-xs"%>	
					<% elsif @role_id.eql?('4')%>
					    <%= link_to 'Cancel', users_path(:role_id => 4, :school_id=>@school.id), class: "btn btn-white btn-xs"%>
					<%end%>
        	    </div>
		    </div>
        </div>
    </div>
</div>
<script type="text/javascript">
if( <%= @role_id.eql?('1')%>)
{
    showHideMenu('li_webadmin');	
}
else if(<%= @role_id.eql?('2')%>)
{
    showHideMenu('li_school');	
}
else if(<%= @role_id.eql?('3')%>)
{
    showHideMenu('li_school');	
}
</script>